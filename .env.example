PORT=3030
HOST=127.0.0.1
MCP_TITLE="Spotify Music"
MCP_VERSION=1.0.0
MCP_PROTOCOL_VERSION=2024-11-05

# Enable OAuth gating for MCP RS (client must authenticate to call /mcp)
AUTH_ENABLED=true
# Optional (inferred by default). You can omit these in dev:
# AUTH_RESOURCE_URI=http://127.0.0.1:3030/mcp
# AUTH_DISCOVERY_URL=http://127.0.0.1:3031
# Spotify user scopes required by tools
OAUTH_SCOPES="user-read-playback-state user-modify-playback-state user-read-currently-playing"
# Desktop redirect back to client (e.g., Claude Desktop)
OAUTH_REDIRECT_URI=alice://oauth/callback
# Local callback used by the AS to receive Spotify code
OAUTH_REDIRECT_ALLOWLIST=https://claude.ai/api/mcp/auth_callback,https://claude.com/api/mcp/auth_callback,https://127.0.0.1:3031/spotify/callback,alice://oauth/callback

# Spotify API client credentials (from your Spotify app)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_API_URL=https://api.spotify.com/v1
SPOTIFY_ACCOUNTS_URL=https://accounts.spotify.com
SPOTIFY_MCP_INCLUDE_JSON_IN_CONTENT=false
# Rate Limiting
RPS_LIMIT=10
CONCURRENCY_LIMIT=5
# Logging
LOG_LEVEL=debug
# Token Storage
RS_TOKENS_FILE=/Users/overment/.mcp/spotify_rs_tokens.json

